<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Carrier Settings">
        <Preference
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

	<net.margaritov.preference.colorpicker.ColorPickerPreference
			android:key="statusbar_background_color"
			android:title="@string/statusbar_background_color"
			android:defaultValue="#000000" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="General Behavior">

	<ListPreference
        android:key="expanded_desktop"
        android:title="@string/power_menu_expanded_desktop"
        android:entries="@array/expanded_desktop_entries"
        android:entryValues="@array/expanded_desktop_values"
        android:persistent="false" />

        <CheckBoxPreference
            android:key="use_alt_resolver"
            android:title="@string/alt_resolver"
            android:summary="@string/alt_resolver_summary"
            android:defaultValue="false" />

	<CheckBoxPreference
            android:key="recent_kill_all"
            android:title="@string/recent_kill_all"
            android:summary="@string/recent_kill_all_summary" />

	<CheckBoxPreference
            android:key="ram_usage_bar"
            android:title="@string/ram_bar"
            android:summary="@string/ram_bar_summary" />
            
        <CheckBoxPreference
            android:key="vibrate_notif_expand"
            android:title="@string/vibrate_notif_expand_title"
            android:summary="@string/vibrate_notif_expand_summary" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Volume Settings">
        <CheckBoxPreference
            android:key="volume_rocker_wake"
            android:title="@string/volume_rocker_wake_title"
            android:summary="@string/volume_rocker_wake_summary"
            android:defaultValue="false" />
            
        <CheckBoxPreference
            android:key="enable_volume_options"
            android:title="@string/enable_volume_options" />

        <CheckBoxPreference
            android:key="volume_music_controls"
            android:title="@string/volume_music_controls_title"
            android:summary="@string/volume_music_controls_summary" />
    </PreferenceCategory>
            
            
</PreferenceScreen>
